@model Project.Models.Day11.ViewModel

<p>Day11/Case02</p>

<form asp-action="Case02"
      method="post">
    <p>
        <label asp-for="OrderDate"></label>
        <input type="date"
               asp-for="OrderDate" />
    </p>
    <div>
        <label asp-for="Items"></label>
        @for (int i = 0; i < Model.Items.Length; i++)
        {
            <p>
                <input type="text"
                       asp-for="Items[i]" />
            </p>
        }
    </div>
    <p>
        <button type="submit">送出</button>
    </p>
</form>

<p><a asp-action="Index" >回上一層</a></p>
